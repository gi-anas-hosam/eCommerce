{{main-menu}}

<h1>Checkout</h1>

 <form role="form" class="center-block" style="width:700px;">
  <div class="form-group">
    <label>Address:</label>
    {{input type="text" value=address class="form-control"}}
  </div>
  <div class="form-group">
    <label>Email:</label>
    {{input type="email" value=email class="form-control"}}
  </div>
  <button {{action 'submitOrder'}} class="btn btn-default">Place Order</button>
</form>